<script>
document.addEventListener('DOMContentLoaded', function() {
  // Smooth scrolling for internal links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const target = document.querySelector(this.getAttribute('href'));
      if (target) {
        target.scrollIntoView({
          behavior: 'smooth',
          block: 'start'
        });
      }
    });
  });
  
  // Cookie preferences modal
  window.showCookiePreferences = function() {
    alert('Çerez tercih merkezi yakında aktif olacak. Şu an için tarayıcı ayarlarınızdan çerezleri yönetebilirsiniz.');
  };
  
  // Privacy policy interactions tracking
  const sections = document.querySelectorAll('.content-section[id]');
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        if (typeof gtag !== 'undefined') {
          gtag('event', 'privacy_policy_section_view', {
            'event_category': 'privacy',
            'event_label': entry.target.id,
            'value': 1
          });
        }
      }
    });
  }, {
    threshold: 0.5
  });
  
  sections.forEach(section => {
    observer.observe(section);
  });
  
  // KVKK application button tracking
  const kvkkButton = document.querySelector('a[href*="contact"]');
  if (kvkkButton && kvkkButton.textContent.includes('KVKK')) {
    kvkkButton.addEventListener('click', function() {
      if (typeof gtag !== 'undefined') {
        gtag('event', 'kvkk_application_click', {
          'event_category': 'privacy',
          'event_label': 'kvkk_application',
          'value': 1
        });
      }
    });
  }
});
</script>