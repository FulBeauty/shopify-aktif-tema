<!-- sections/guarantee.liquid -->
<section id="guarantee" class="guarantee-section" style="background-color: {{ section.settings.background_color | default: 'var(--trust-green)' }};">
    <div class="guarantee-content">
        {% if section.settings.title != blank %}
        <h2>{{ section.settings.title }}</h2>
        {% endif %}
        
        {% if section.settings.description != blank %}
        <p class="guarantee-description">{{ section.settings.description }}</p>
        {% endif %}
        
        {% comment %} Guarantee badge/seal {% endcomment %}
        {% if section.settings.show_guarantee_seal %}
        <div class="guarantee-seal">
            {% if section.settings.seal_image != blank %}
                <img src="{{ section.settings.seal_image | img_url: '120x120' }}" 
                     alt="{{ section.settings.seal_alt | default: 'Garanti Mührü' }}" 
                     loading="lazy">
            {% else %}
                <div class="seal-placeholder">
                    <div class="seal-icon">{{ section.settings.seal_icon | default: '🛡️' }}</div>
                    <div class="seal-text">
                        <div class="seal-number">{{ section.settings.guarantee_days | default: '30' }}</div>
                        <div class="seal-label">{{ section.settings.seal_label | default: 'GÜN GARANTİ' }}</div>
                    </div>
                </div>
            {% endif %}
        </div>
        {% endif %}
        
        {% if section.blocks.size > 0 %}
        <div class="guarantee-features">
            {% for block in section.blocks %}
                {% case block.type %}
                    {% when 'guarantee_feature' %}
                        <div class="guarantee-feature" {{ block.shopify_attributes }}>
                            {% if block.settings.icon != blank %}
                            <div class="icon">{{ block.settings.icon }}</div>
                            {% endif %}
                            
                            {% if block.settings.title != blank %}
                            <h3>{{ block.settings.title }}</h3>
                            {% endif %}
                            
                            {% if block.settings.description != blank %}
                            <p>{{ block.settings.description }}</p>
                            {% endif %}
                            
                            {% comment %} Feature details {% endcomment %}
                            {% if block.settings.show_details %}
                            <div class="feature-details">
                                {% if block.settings.detail_1 != blank %}
                                <div class="detail-item">
                                    <span class="detail-icon">{{ block.settings.detail_1_icon | default: '✓' }}</span>
                                    <span class="detail-text">{{ block.settings.detail_1 }}</span>
                                </div>
                                {% endif %}
                                
                                {% if block.settings.detail_2 != blank %}
                                <div class="detail-item">
                                    <span class="detail-icon">{{ block.settings.detail_2_icon | default: '✓' }}</span>
                                    <span class="detail-text">{{ block.settings.detail_2 }}</span>
                                </div>
                                {% endif %}
                            </div>
                            {% endif %}
                        </div>
                        
                    {% when 'guarantee_step' %}
                        <div class="guarantee-step" {{ block.shopify_attributes }}>
                            {% if block.settings.step_number != blank %}
                            <div class="step-number">{{ block.settings.step_number }}</div>
                            {% endif %}
                            
                            <div class="step-content">
                                {% if block.settings.step_title != blank %}
                                <h4>{{ block.settings.step_title }}</h4>
                                {% endif %}
                                
                                {% if block.settings.step_description != blank %}
                                <p>{{ block.settings.step_description }}</p>
                                {% endif %}
                                
                                {% if block.settings.step_link_text != blank and block.settings.step_link_url != blank %}
                                <a href="{{ block.settings.step_link_url }}" class="step-link">
                                    {{ block.settings.step_link_text }} →
                                </a>
                                {% endif %}
                            </div>
                        </div>
                        
                    {% when 'testimonial_quote' %}
                        <div class="guarantee-testimonial" {{ block.shopify_attributes }}>
                            <div class="testimonial-quote-icon">"</div>
                            {% if block.settings.quote_text != blank %}
                            <blockquote>{{ block.settings.quote_text }}</blockquote>
                            {% endif %}
                            
                            {% if block.settings.author_name != blank %}
                            <cite>- {{ block.settings.author_name }}</cite>
                            {% endif %}
                            
                            {% if block.settings.author_photo != blank %}
                            <div class="author-photo">
                                <img src="{{ block.settings.author_photo | img_url: '50x50' }}" 
                                     alt="{{ block.settings.author_name }}" 
                                     loading="lazy">
                            </div>
                            {% endif %}
                        </div>
                {% endcase %}
            {% endfor %}
        </div>
        {% endif %}
        
        {% comment %} Money back guarantee details {% endcomment %}
        {% if section.settings.show_money_back_details %}
        <div class="money-back-details">
            <h3>{{ section.settings.money_back_title | default: 'Para İade Koşulları' }}</h3>
            <div class="money-back-grid">
                <div class="money-back-item">
                    <div class="money-back-icon">📦</div>
                    <div class="money-back-content">
                        <h4>{{ section.settings.return_condition_1_title | default: 'Kolay İade' }}</h4>
                        <p>{{ section.settings.return_condition_1_text | default: 'Ürünü orijinal ambalajında iade edin' }}</p>
                    </div>
                </div>
                
                <div class="money-back-item">
                    <div class="money-back-icon">🔬</div>
                    <div class="money-back-content">
                        <h4>{{ section.settings.return_condition_2_title | default: 'Hipoalerjenik testli' }}</h4>
                        <p>{{ section.settings.return_condition_2_text | default: 'Kimyasal içermez' }}</p>
                    </div>
                </div>
                
                <div class="money-back-item">
                    <div class="money-back-icon">🦠</div>
                    <div class="money-back-content">
                        <h4>{{ section.settings.return_condition_3_title | default: 'Ücretsiz İade' }}</h4>
                        <p>{{ section.settings.return_condition_3_text | default: 'İade kargo masrafı tarafımızdan karşılanır' }}</p>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
        
        {% comment %} NEW FAQ Section - Enhanced version {% endcomment %}
        {% if section.settings.show_faq %}
        <div class="guarantee-faq">
            <h3>{{ section.settings.faq_title | default: 'Sık Sorulan Sorular' }}</h3>
            
            <!-- FAQ Categories -->
            <div class="faq-categories">
                <div class="category-tag active" onclick="filterFAQ('all')">📋 Tümü</div>
                <div class="category-tag" onclick="filterFAQ('product')">🧴 Ürün Hakkında</div>
                <div class="category-tag" onclick="filterFAQ('usage')">💡 Kullanım</div>
                <div class="category-tag" onclick="filterFAQ('safety')">🛡️ Güvenlik</div>
                <div class="category-tag" onclick="filterFAQ('shipping')">🚚 Kargo & İade</div>
            </div>
            
            <div class="faq-container">
                <!-- ÜRÜN HAKKINDA -->
                <div class="faq-item" data-category="product">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>🏥 Dermatoloji uzmanı onaylı olması ne anlama geliyor?</span>
                        <span class="faq-icon">+</span>
                    </div>
                    <div class="faq-answer">
                        <div class="faq-answer-content">
                            <p>Ful Beauty silikon fırçası, <span class="highlight">Dermatoloji Uzmanı Dr. Ayşe Kaya</span> tarafından 6 aylık klinik testlerden geçirilmiş ve güvenliği onaylanmıştır.</p>
                            
                            </div>
                            
                            <p><span class="highlight"> Bu onay şunları garanti eder:</p>
                            <ul style="list-style-type: none; padding-left: 0; margin: 10px 0;">
                                <li style="margin-bottom: 8px; padding: 5px 0;">🔹 Hipoalerjenik - hassas cilt için güvenli</li>
                                <li style="margin-bottom: 8px; padding: 5px 0;">🔹 CE medikal cihaz sertifikası</li>
                                <li style="margin-bottom: 8px; padding: 5px 0;">🔹 Klinik testlerle kanıtlanmış etkinlik</li>
                                <li style="margin-bottom: 8px; padding: 5px 0;">🔹 Dermatoloji uzmanı takibi</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="faq-item" data-category="product">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>🆚 Diğer silikon fırçalardan farkı nedir?</span>
                        <span class="faq-icon">+</span>
                    </div>
                    <div class="faq-answer">
                        <div class="faq-answer-content">
                            <p><strong>Piyasadaki %90 silikon fırça hiçbir dermatoloji testinden geçmemiş.</strong> Bizim farkımız:</p>
                            
                            <p><span class="highlight">✓ Çift yoğunluk silikon teknoloji:</span> Hassas ve derin temizlik bir arada</p>
                            <p><span class="highlight">✓ 30 gün sonuç garantisi.</p>
                            
                            <div class="warning-box">
                                <strong>⚠️ Dikkat:</strong> Piyasadaki ucuz fırçalar CE sertifikası olmayan, test edilmemiş silikondan üretiliyor. Cilt tahrişi ve alerjik reaksiyonlara neden olabilir.
                            </div>
                        </div>
                    </div>
                </div>

                <!-- KULLANIM -->
                <div class="faq-item" data-category="usage">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>📖 Nasıl kullanılır? Zorlu bir işlem mi?</span>
                        <span class="faq-icon">+</span>
                    </div>
                    <div class="faq-answer">
                        <div class="faq-answer-content">
                            <p><strong>Çok basit! 3 adımda günlük 2 dakika:</strong></p>
                            
                            <p><span class="highlight">1. HAZIRLIK (30 saniye):</span></p>
                            <p>• Yüzünüzü ılık suyla ıslatın</p>
                            <p>• Temizleme jelinizi fırçaya uygulayın</p>
                            
                            <p><span class="highlight">2. TEMİZLİK (90 saniye):</span></p>
                            <p>• Yumuşak tarafla nazik dairesel hareketler</p>
                            <p>• Sert tarafla problemli bölgelere derin temizlik</p>
                            
                            <p><span class="highlight">3. DURULAMA (30 saniye):</span></p>
                            <p>• Bol suyla durulayın</p>
                            <p>• Fırçayı temizleyip kurutun</p>
                        </div>
                    </div>
                </div>

                <div class="faq-item" data-category="usage">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>⏰ Ne kadar sürede sonuç görürüm?</span>
                        <span class="faq-icon">+</span>
                    </div>
                    <div class="faq-answer">
                        <div class="faq-answer-content">
                            <p><strong>Klinik testlerimizde gözlemlenen sonuçlar:</strong></p>
                            
                            <p><span class="highlight">🚀 İlk 3 gün:</span> Cilt yumuşaklığında artış</p>
                            <p><span class="highlight">📅 1. hafta:</span> Gözenek görünümünde iyileşme</p>
                            <p><span class="highlight">📅 2. hafta:</span> Cilt parlaklığında artış</p>
                            <p><span class="highlight">📅 3. hafta:</span> Siyah nokta azalması</p>
                            <p><span class="highlight">📅 4. hafta:</span> Genel cilt dokusunda belirgin iyileşme</p>
                            
                        </div>
                    </div>
                </div>

                <!-- GÜVENLİK -->
                <div class="faq-item" data-category="safety">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>😰 Hassas cildim var, tahriş yapar mı?</span>
                        <span class="faq-icon">+</span>
                    </div>
                    <div class="faq-answer">
                        <div class="faq-answer-content">
                            <p><span class="highlight">HAYIR! Tam tersine hassas cilt için özel tasarlandı.</span></p>
                            
                            <p><strong>Hassas cilt için güvenlik özellikleri:</strong></p>
                            <ul>
                                <li>🔬 Hipoalerjenik testli</li>
                                <li>🧪 Dermatolog onaylı</li>
                                <li>🌿 Kimyasal içermez</li>
                                <li>✨ Ultra yumuşak silikon</li>
                            </ul>
                            
                        </div>
                    </div>
                </div>


                <div class="faq-item" data-category="shipping">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>🚚 Kargo süresi ve ücretleri nedir?</span>
                        <span class="faq-icon">+</span>
                    </div>
                    <div class="faq-answer">
                        <div class="faq-answer-content">
                            <p><strong>🆓 ÜCRETSİZ KARGO:</strong> Tüm siparişlerde ücretsiz!</p>
                            
                            <p><strong>Teslimat süreleri:</strong></p>
                            <ul>
                                <li><span class="highlight">İstanbul, Ankara, İzmir:</span> 1-2 iş günü</li>
                                <li><span class="highlight">Diğer iller:</span> 2-3 iş günü</li>
                                <li><span class="highlight">Aynı gün teslimat:</span> İstanbul için +25 TL (14:00'a kadar siparişlerde)</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="faq-item" data-category="usage">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>🧴 Hangi temizleme ürünleriyle kullanabilirim?</span>
                        <span class="faq-icon">+</span>
                    </div>
                    <div class="faq-answer">
                        <div class="faq-answer-content">
                            <p><strong>Tüm cilt tipine uygun temizleyicilerle kullanabilirsiniz:</strong></p>
                            
                            <ul>
                                <li><span class="highlight">Yumuşak yüz temizleme jeli</span> (günlük kullanım)</li>
                                <li><span class="highlight">Köpük temizleyici</span> (hassas cilt için)</li>
                                <li><span class="highlight">Salisilik asitli temizleyici</span> (yağlı cilt için)</li>
                                <li><span class="highlight">Micellar su</span> (pratik kullanım)</li>
                            </ul>
                            
                            <div class="warning-box">
                                <strong>❌ KULLANMAYIN:</strong> Granüllü peeling ürünleri, alkol bazlı tonikler, retinol içeren ürünlerle aynı anda kullanmayın.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="faq-item" data-category="safety">
                    <div class="faq-question" onclick="toggleFAQ(this)">
                        <span>🤱 Hamilelik ve emzirme döneminde kullanılabilir mi?</span>
                        <span class="faq-icon">+</span>
                    </div>
                    <div class="faq-answer">
                        <div class="faq-answer-content">
                            <p><span class="highlight">✅ EVET, güvenle kullanabilirsiniz!</span></p>
                            
                            <p><strong>Nedenleri:</strong></p>
                            <ul>
                                <li>%100 medikal silikon malzeme</li>
                                <li>Kimyasal içermez</li>
                                <li>Sadece fiziksel temizlik yapar</li>
                                <li>Hormonal değişikliklere uygun</li>
                            </ul>
                            
                            <p><strong>🤰 Hamilelik döneminde özel faydaları:</strong></p>
                            <p>• Hormonal akne için güvenli çözüm</p>
                            <p>• Cilt hassasiyeti artışında nazik bakım</p>
                            <p>• Gebelik maskesi için önleyici bakım</p>
                        </div>
                    </div>
                </div>


            </div>
        </div>
        {% endif %}
        
        {% comment %} Contact support section {% endcomment %}
        {% if section.settings.show_support_contact %}
        <div class="support-contact">
            <h3>{{ section.settings.support_title | default: 'Yardıma mı İhtiyacınız Var?' }}</h3>
            <p>{{ section.settings.support_description | default: 'Garanti süreciniz hakkında sorularınız için bizimle iletişime geçin.' }}</p>
            
            <div class="support-methods">
                {% if section.settings.support_phone != blank %}
                <a href="tel:{{ section.settings.support_phone }}" class="support-method">
                    <span class="support-icon">📞</span>
                    <span class="support-text">{{ section.settings.support_phone }}</span>
                </a>
                {% endif %}
                
                {% if section.settings.support_email != blank %}
                <a href="mailto:{{ section.settings.support_email }}" class="support-method">
                    <span class="support-icon">✉️</span>
                    <span class="support-text">{{ section.settings.support_email }}</span>
                </a>
                {% endif %}
                
                {% if section.settings.support_whatsapp != blank %}
                <a href="https://wa.me/{{ section.settings.support_whatsapp }}" class="support-method" target="_blank">
                    <span class="support-icon">💬</span>
                    <span class="support-text">WhatsApp Destek</span>
                </a>
                {% endif %}
            </div>
        </div>
        {% endif %}
        
        {% comment %} Final CTA {% endcomment %}
        {% if section.settings.cta_button_text != blank %}
        <div class="guarantee-cta">
            <a href="{{ section.settings.cta_button_link | default: '/collections/all' }}" 
               class="cta-button guarantee-cta-button">
                {{ section.settings.cta_button_text }}
            </a>
            
            {% if section.settings.cta_subtext != blank %}
            <p class="cta-subtext">{{ section.settings.cta_subtext }}</p>
            {% endif %}
        </div>
        {% endif %}
        
        {% comment %} Trust indicators strip {% endcomment %}
        {% if section.settings.show_trust_strip %}
        <div class="trust-indicators-strip">
            <div class="trust-indicator-item">
                <span class="trust-icon">🔒</span>
                <span class="trust-text">{{ section.settings.trust_1_text | default: 'Güvenli Ödeme' }}</span>
            </div>
            <div class="trust-indicator-item">
                <span class="trust-icon">🚚</span>
                <span class="trust-text">{{ section.settings.trust_2_text | default: 'Hızlı Teslimat' }}</span>
            </div>
            <div class="trust-indicator-item">
                <span class="trust-icon">⭐</span>
                <span class="trust-text">{{ section.settings.trust_3_text | default: '5 Yıldız Hizmet' }}</span>
            </div>
        </div>
        {% endif %}
    </div>
</section>

<style>
:root {
    --trust-green: #6B8E5A;
}

.guarantee-section {
    padding: 4rem 5%;
    color: white;
    position: relative;
    overflow: hidden;
}

.guarantee-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
        radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.05) 0%, transparent 50%),
        radial-gradient(circle at 40% 80%, rgba(255, 255, 255, 0.08) 0%, transparent 50%);
    pointer-events: none;
}

.guarantee-content {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
}

.guarantee-section h2 {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: 'Playfair Display', serif;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
}

.guarantee-description {
    text-align: center;
    font-size: 1.2rem;
    margin-bottom: 3rem;
    opacity: 0.95;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.6;
}

/* Guarantee Seal */
.guarantee-seal {
    display: flex;
    justify-content: center;
    margin: 2rem 0 3rem;
}

.guarantee-seal img {
    max-width: 120px;
    height: auto;
    filter: brightness(0) invert(1);
    opacity: 0.9;
}

.seal-placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    width: 150px;
    height: 150px;
    position: relative;
    overflow: hidden;
}

.seal-placeholder::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: conic-gradient(transparent, rgba(255, 255, 255, 0.1), transparent);
    animation: rotate 3s linear infinite;
}

@keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }  
}

.seal-icon {
    font-size: 2rem;
    z-index: 2;
}

.seal-text {
    text-align: center;
    color: white;
    z-index: 2;
}

.seal-number {
    font-size: 2rem;
    font-weight: 700;
    line-height: 1;
    font-family: 'Playfair Display', serif;
}

.seal-label {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 1px;
    margin-top: 0.25rem;
}

/* Enhanced Guarantee Features Grid */
.guarantee-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
    max-width: 1000px;
    margin-left: auto;
    margin-right: auto;
}

.guarantee-feature {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
}

.guarantee-feature:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.2);
}

.guarantee-feature .icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.9;
}

.guarantee-feature h3 {
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: white;
}

.guarantee-feature p {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.5;
}

/* Guarantee Steps */
.guarantee-step {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 15px;
    transition: all 0.3s ease;
}

.guarantee-step:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
}

.step-number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: white;
    color: var(--trust-green);
    border-radius: 50%;
    font-size: 1.5rem;
    font-weight: 700;
    flex-shrink: 0;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.step-content h4 {
    color: white;
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
}

.step-content p {
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.5;
    margin-bottom: 1rem;
}

.step-link {
    color: white;
    text-decoration: none;
