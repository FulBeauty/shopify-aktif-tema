<!-- sections/social-proof.liquid -->
<section class="social-proof-section">
  <div class="container">
    
    <!-- Başlık -->
    <div class="social-proof-header">
      <h2>{{ section.settings.title | default: '📱 Sosyal Medyada Binlerce Mutlu Müşteri' }}</h2>
      {% if section.settings.subtitle != blank %}
      <p class="social-subtitle">{{ section.settings.subtitle }}</p>
      {% endif %}
    </div>

    <!-- Sosyal Medya İstatistikleri -->
    {% if section.settings.show_stats %}
    <div class="social-stats">
      <div class="stat-card">
        <div class="stat-icon">📷</div>
        <div class="stat-number">{{ section.settings.instagram_followers | default: '45K' }}</div>
        <div class="stat-label">Instagram Takipçi</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">🎵</div>
        <div class="stat-number">{{ section.settings.tiktok_followers | default: '128K' }}</div>
        <div class="stat-label">TikTok Takipçi</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">💬</div>
        <div class="stat-number">{{ section.settings.daily_mentions | default: '850+' }}</div>
        <div class="stat-label">Günlük Bahsedilme</div>
      </div>
      <div class="stat-card">
        <div class="stat-icon">⭐</div>
        <div class="stat-number">{{ section.settings.rating_average | default: '4.9' }}</div>
        <div class="stat-label">Ortalama Puan</div>
      </div>
    </div>
    {% endif %}

    <!-- Sosyal Medya Postları -->
    <div class="social-posts-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'social_post' %}
            <div class="social-post-card" data-platform="{{ block.settings.platform }}" {{ block.shopify_attributes }}>
              
              <!-- Platform Header -->
              <div class="post-header">
                <div class="platform-info">
                  <div class="platform-icon">
                    {% case block.settings.platform %}
                      {% when 'instagram' %}📷
                      {% when 'tiktok' %}🎵
                      {% when 'facebook' %}📘
                      {% when 'twitter' %}🐦
                      {% when 'youtube' %}📺
                      {% else %}📱
                    {% endcase %}
                  </div>
                  <div class="user-info">
                    <div class="username">@{{ block.settings.username | default: 'kullanici' }}</div>
                    <div class="platform-name">{{ block.settings.platform | capitalize }}</div>
                  </div>
                </div>
                
                {% if block.settings.verified %}
                <div class="verified-badge">✅</div>
                {% endif %}
              </div>

              <!-- Post İçeriği -->
              <div class="post-content">
                {% if block.settings.post_image != blank %}
                <div class="post-image">
                  <img src="{{ block.settings.post_image | img_url: '300x300' }}" 
                       alt="{{ block.settings.post_text | truncatewords: 5 }}"
                       loading="lazy">
                  
                  {% if block.settings.is_video %}
                  <div class="video-overlay">
                    <div class="play-button">▶️</div>
                  </div>
                  {% endif %}
                </div>
                {% endif %}
                
                {% if block.settings.post_text != blank %}
                <div class="post-text">
                  {{ block.settings.post_text | newline_to_br }}
                </div>
                {% endif %}
              </div>

              <!-- Post Metrikleri -->
              {% if block.settings.show_metrics %}
              <div class="post-metrics">
                {% if block.settings.likes_count != blank %}
                <div class="metric">
                  <span class="metric-icon">❤️</span>
                  <span class="metric-count">{{ block.settings.likes_count }}</span>
                </div>
                {% endif %}
                
                {% if block.settings.comments_count != blank %}
                <div class="metric">
                  <span class="metric-icon">💬</span>
                  <span class="metric-count">{{ block.settings.comments_count }}</span>
                </div>
                {% endif %}
                
                {% if block.settings.shares_count != blank %}
                <div class="metric">
                  <span class="metric-icon">🔄</span>
                  <span class="metric-count">{{ block.settings.shares_count }}</span>
                </div>
                {% endif %}
              </div>
              {% endif %}

              <!-- Post Tarihi -->
              {% if block.settings.post_date != blank %}
              <div class="post-date">
                {{ block.settings.post_date }}
              </div>
              {% endif %}
            </div>

          {% when 'ugc_showcase' %}
            <div class="ugc-showcase-card" {{ block.shopify_attributes }}>
              <div class="ugc-badge">👥 {{ block.settings.badge_text | default: 'Müşteri Paylaşımı' }}</div>
              
              {% if block.settings.ugc_image != blank %}
              <div class="ugc-image">
                <img src="{{ block.settings.ugc_image | img_url: '300x300' }}" 
                     alt="Müşteri paylaşımı"
                     loading="lazy">
              </div>
              {% endif %}
              
              <div class="ugc-content">
                {% if block.settings.ugc_text != blank %}
                <p class="ugc-text">"{{ block.settings.ugc_text }}"</p>
                {% endif %}
                
                <div class="ugc-author">
                  <strong>{{ block.settings.customer_name | default: 'Müşterimiz' }}</strong>
                  {% if block.settings.customer_location != blank %}
                  <span class="location">📍 {{ block.settings.customer_location }}</span>
                  {% endif %}
                </div>
                
                {% if block.settings.product_tag != blank %}
                <div class="product-tag">#{{ block.settings.product_tag }}</div>
                {% endif %}
              </div>
            </div>

          {% when 'influencer_post' %}
            <div class="influencer-post-card" {{ block.shopify_attributes }}>
              <div class="influencer-badge">⭐ {{ block.settings.badge_text | default: 'Influencer Tavsiyesi' }}</div>
              
              <div class="influencer-header">
                {% if block.settings.influencer_photo != blank %}
                <div class="influencer-photo">
                  <img src="{{ block.settings.influencer_photo | img_url: '60x60' }}" 
                       alt="{{ block.settings.influencer_name }}"
                       loading="lazy">
                </div>
                {% endif %}
                
                <div class="influencer-info">
                  <div class="influencer-name">{{ block.settings.influencer_name | default: 'Beauty Influencer' }}</div>
                  <div class="follower-count">{{ block.settings.follower_count | default: '50K' }} takipçi</div>
                </div>
              </div>
              
              {% if block.settings.influencer_quote != blank %}
              <blockquote class="influencer-quote">
                "{{ block.settings.influencer_quote }}"
              </blockquote>
              {% endif %}
              
              {% if block.settings.collaboration_type != blank %}
              <div class="collaboration-tag">{{ block.settings.collaboration_type }}</div>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    <!-- Hashtag Showcase -->
    {% if section.settings.show_hashtags %}
    <div class="hashtag-showcase">
      <h3>{{ section.settings.hashtag_title | default: '🏷️ Bizi Etiketleyin!' }}</h3>
      <div class="hashtag-grid">
        {% assign hashtags = section.settings.hashtags | split: ',' %}
        {% for hashtag in hashtags %}
          {% unless hashtag == blank %}
          <div class="hashtag-item">
            <span class="hashtag">#{{ hashtag | strip }}</span>
            <span class="hashtag-count">{{ forloop.index | times: 234 }}+ post</span>
          </div>
          {% endunless %}
        {% endfor %}
      </div>
      
      <p class="hashtag-cta">
        Ürünümüzü kullanırken <strong>#FulBeauty</strong> hashtag'ini kullanın, 
        paylaşımınızı burada görebilirsiniz! 📸
      </p>
    </div>
    {% endif %}

    <!-- Live Activity Feed -->
    {% if section.settings.show_live_feed %}
    <div class="live-activity-feed">
      <h3>{{ section.settings.live_feed_title | default: '🔴 Canlı Aktivite' }}</h3>
      <div class="activity-items">
        <div class="activity-item">
          <span class="activity-icon">🛒</span>
          <span class="activity-text"><strong>Zeynep K.</strong> az önce sipariş verdi</span>
          <span class="activity-time">2 dk önce</span>
        </div>
        <div class="activity-item">
          <span class="activity-icon">⭐</span>
          <span class="activity-text"><strong>Ayşe M.</strong> 5 yıldız verdi</span>
          <span class="activity-time">5 dk önce</span>
        </div>
        <div class="activity-item">
          <span class="activity-icon">📷</span>
          <span class="activity-text"><strong>@beautygirl23</strong> Instagram'da paylaştı</span>
          <span class="activity-time">12 dk önce</span>
        </div>
        <div class="activity-item">
          <span class="activity-icon">💬</span>
          <span class="activity-text"><strong>Merve S.</strong> yorum yaptı</span>
          <span class="activity-time">18 dk önce</span>
        </div>
      </div>
    </div>
    {% endif %}

    <!-- Call-to-Action -->
    {% if section.settings.show_cta %}
    <div class="social-cta">
      <h3>{{ section.settings.cta_title | default: 'Siz de Paylaşın!' }}</h3>
      <p>{{ section.settings.cta_subtitle | default: 'Deneyiminizi sosyal medyada paylaşın, toplumumuzun bir parçası olun.' }}</p>
      
      <div class="social-buttons">
        {% if section.settings.instagram_url != blank %}
        <a href="{{ section.settings.instagram_url }}" class="social-btn instagram" target="_blank">
          📷 Instagram'da Takip Et
        </a>
        {% endif %}
        
        {% if section.settings.tiktok_url != blank %}
        <a href="{{ section.settings.tiktok_url }}" class="social-btn tiktok" target="_blank">
          🎵 TikTok'ta Takip Et
        </a>
        {% endif %}
        
        <a href="{{ section.settings.product_url | default: routes.all_products_collection_url }}" class="social-btn primary">
          🛒 Hemen Sipariş Ver
        </a>
      </div>
    </div>
    {% endif %}

  </div>
</section>

